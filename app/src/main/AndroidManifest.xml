<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.devmc.spotlisty">


    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Spotlisty">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:label="SpotListy"></activity>

        <activity
            android:name=".PlaylistsActivity"
            android:label="Your Playlists">
        </activity>

        <activity
            android:name=".PlaylistTracksActivity"
            android:label="Playlist Tracks">
        </activity>

        <activity
            android:name=".GeneratedFromPlaylistActivity"
            android:label="Generated From Playlist">
        </activity>

        <activity
            android:name=".SavePlaylistActivity"
            android:label="Playlist Saved">
        </activity>

        <activity
            android:name=".GenresActivity"
            android:label="Genres">
        </activity>

        <activity
            android:name=".GeneratedFromGenreActivity"
            android:label="Generated From Genre">
        </activity>

        <activity
            android:name=".GenerateFromRecentActivity"
            android:label="Generated">
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>

</manifest>