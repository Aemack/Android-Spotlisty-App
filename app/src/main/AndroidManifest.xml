<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.devmc.spotlisty">


    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Spotlisty">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"></activity>

        <activity
            android:name=".PlaylistsActivity"
            android:label="PlaylistsActivity">
        </activity>

        <activity
            android:name=".PlaylistTracksActivity"
            android:label="PlaylistTracksActivity">
        </activity>

        <activity
            android:name=".GeneratedFromPlaylistActivity"
            android:label="GeneratedFromPlaylistActivity">
        </activity>

        <activity
            android:name=".SavePlaylistActivity"
            android:label="SavePlaylistActivity">
        </activity>
    </application>

</manifest>